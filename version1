package model;

import java.util.ArrayList;
import java.util.List;

public class Connection implements Interface {

	private List tabelaPessoas = new ArrayList();
	private List tabelaMateriais = new ArrayList();

	// metodo de cadastro

	@Override
	public <T> void cadastrar(Object t) {

		if (t instanceof Pessoa) {

			tabelaPessoas.add(t);
			System.out.println(((Pessoa) t).getNome() + " foi  adicionado!");

		} else if (t instanceof Material) {

			tabelaMateriais.add(t);
			System.out.println(((Material) t).getNome() + " foi  adicionado!");
		}

	}

	// metodo de consulta

	@Override
	public void consultar() {

		System.out.println("TABELA PESSOAS");
		for (int i = 0; i < tabelaPessoas.size(); i++)

			System.out.println(tabelaPessoas.get(i));

		System.out.println("TABELA MATERIAIS");
		for (int i = 0; i < tabelaMateriais.size(); i++)

			System.out.println(tabelaMateriais.get(i));

	}

	@Override
	public <T> void alterar(Object t) {
		// TODO Auto-generated method stub

	}

	@Override
	public <T> void excluit(Object t) {
		// TODO Auto-generated method stub

	}

	// metodos da classe

	public void consultarPessoaId(int id) {
		System.out.println(tabelaPessoas.get(id));
	}

	public void consultarMaterialId(int id) {
		System.out.println(tabelaMateriais.get(id));
	}

}
